{% extends 'base.html.twig' %}
{% form_theme formAnnonce 'bootstrap_4_layout.html.twig' %}
{% block title %} Création d'une annonce {% endblock %}

{% block body %}
    <div class="container new">
        <h1>Création d'une annonce</h1>
        <div class="formulaire">
            {{ form_start(formAnnonce) }}
            {{ form_row(formAnnonce.title , { 'attr':{'placeholder':'titre de cette fameuse annonce'}}) }}
            {#{{ form_row(formAnnonce.slug) }}#}
            {{ form_row(formAnnonce.introduction) }}
            {{ form_row(formAnnonce.content) }}
            {{ form_row(formAnnonce.coverImage) }}
            {{ form_row(formAnnonce.price) }}
           {# {{ form_row(formAnnonce.images) }}#}
            <button type="submit" class="btn btn-success">Enregistrer</button>
            {{ form_end(formAnnonce) }}
        </div>
    </div>


{% endblock %}
